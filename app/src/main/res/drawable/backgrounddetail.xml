<!-- res/drawable/rounded_all_corners.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#DEDCE6" />

    <!-- Border line -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Rounded corners (all) -->
    <corners android:radius="4dp" />
</shape>
